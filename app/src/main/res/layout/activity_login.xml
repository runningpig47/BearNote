<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/root1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cat_bg"
        android:backgroundTintMode="src_atop">

        <!--顶部的状态栏预留-->
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/login_close" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="小熊记账"
                android:textColor="#000000"
                android:textSize="36sp" />
            <!--输入您的手机号-->
            <LinearLayout
                android:id="@+id/activity_login_layout1"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textview_gray"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入用户名"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textColor="#666666"
                    android:textColorHint="#cccccc"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--输入您的密码-->
            <LinearLayout
                android:id="@+id/activity_login_layout2"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_below="@id/activity_login_layout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_gray"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingStart="30dp"
                    android:paddingEnd="0dp"
                    android:textColor="#666666"
                    android:textColorHint="#cccccc"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageview2"
                        android:layout_width="20dp"
                        android:layout_height="12dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_close_password"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_below="@id/activity_login_layout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rec_stroke_blue"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="登陆"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="#bbbbbb" />
        </RelativeLayout>
    </RelativeLayout>
</layout>