<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rec_stroke_d0d0d0">

        <FrameLayout
            android:id="@+id/af_frameLayout1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/af_imageView1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic1" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/af_frameLayout1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/af_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    tools:text="现金" />

                <TextView
                    android:id="@+id/af_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp"
                    tools:text="临时现金账户" />
            </LinearLayout>

            <cloud.runningpig.bearnote.ui.custom.NTextView
                android:id="@+id/af_textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"
                tools:text="3000.00" />

        </LinearLayout>

    </RelativeLayout>
</layout>